---
layout: null
search: false
---

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
  <channel>
    {% assign text_cats = site.posts | where_exp: "item", "item.categories != 'stitcher'" %}
    {% for post in text_cats limit: 1 %}
    <item>
      <guid>{{ post.url }}</guid>
      <title>{{ post.title | markdownify | strip_html }}</title>
      <description>Summary ... {{ post.summary | markdownify | strip_html }}
        .  Now let's jump into the post ... {{ post.content | markdownify | strip_html | truncate: 4000, ".... To hear more of this post, go to I'd Rather Be Writing dot com." }}
      </description>
      <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
      <pubDate>{{ post.date | date: "%Y-%m-%d"  }}</pubDate>
     </item>
     {% endfor %}
  </channel>
</rss>
